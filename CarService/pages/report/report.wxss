/* pages/report/report.wxss */
.flex-wrp {
  display: flex;
  flex-direction: row;
  
}
.flex-item {
  width: 100rpx;
  height: 100rpx;
  background: red;
  border: 1px solid black;
}
.container {
  background: #fafafa;
  display: block;
}
.page-item {
  padding: 30rpx;
  /* text-align: left; */
}
.page-item-div {
  width: 200rpx;
  height: 200rpx;
  /* border: 1px solid black; */
  display: inline-block;
  border-radius: 10px;
  background: white;
}
.page-item-div-1 {
  margin-right: 30rpx;
  /* margin-left: 50rpx; */
}
.page-item-div-img {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 20rpx auto;
  /* border: 1px solid black; */
}
.page-item-div-img image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.page-item-div-text {
  text-align: center;
  color: #666666;
}
.page-item-detail-title {
  padding: 30rpx;
  font-weight: bold;
}
.page-item-detail-name {
  padding: 30rpx;
}
.page-item-detail-name-div {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: 4rpx solid #4c97f6;
  text-align: center;
  border-radius: 30rpx;
  background: white;
}
.page-item-detail-year {
  margin-left: 30rpx;
  color: #999999;
}
.page-item-detail-reprot {
  margin: 30rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 10px;
}
.page-item-detail-reprot-top {
  display: flex;
  justify-content: space-between;
}
.custom-image {
  display: inline-block;
  width: 75rpx;
  height: 75rpx;
}
.custom-image image {
  display: inline-block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.custom-name {
  display: inline-block;
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: top;
  margin-left: 20rpx;
}
.type-select {
  border: 4rpx solid #4c97f6;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: top;
  margin-left: 20rpx;
  text-align: center;
  border-radius: 15rpx;
}
.to_bottom {
  width: 0;
  height: 0;
  border-top: 10px solid #4c97f6;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  display: inline-block;
}
.middle-title {
  margin-top: 30rpx;
  padding-bottom: 70rpx;
  color: #4c97f6;
  font-size: 50rpx;
  border-bottom: 1rpx solid #d1d0d0;
}
.middel-content-detail view{
  display: inline-block;
}
.middel-content-detail-label {
  margin-top: 30rpx;
  color: #999999;
  margin-right: 20rpx;
}
.btn {
  background: #4c97f6;
  color: white;
  margin: 50rpx 0;
}




.report-tip {
  color: #999999;
  text-align: center;
  padding: 30rpx;
}